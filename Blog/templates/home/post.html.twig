{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
<div class="container">

    <div class="row">
        <div class="col-md-10">
            <img src="https://via.placeholder.com/150C/O https://placeholder.com/" class="card-img-top" alt="...">
            <h1>{{post.title}}</h1>
            <p class="card-text">{{post.content}}</p>
            <p>{{post.author}}
                -
                {{post.createdAt | date("d/m/Y")}}</p>

            <a class="btn btn-primary" href="/home">Retour</a>
        </div>
    </div>
    <div class='row'>
        <div class='col-md-3'>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            {% for comment in post.comments %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{comment.pseudo}}</h5>
                    <h6 class="card-subtittle mb-2 text-mutted">{{comment.createdAt | date('d/m/Y')}}</h6>
                    <p class="card-text">{{comment.content}}</p>
                </div>
            </div>

            {% endfor %}

        </div>
    </div>

{% endblock %}




