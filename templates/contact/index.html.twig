{% extends 'base.html.twig' %}

{% block title %}Fish and Tips - Contact {% endblock %}

{% block body %}

    <section class="text-center">
        <div class="container">
            <h2>Contact</h2>
            <div class="row">

                <div class="col-md-12">
                    <div class=" offset-md-2 col-md-8 offset-sm-1 col-sm-10 mt-4 pb-3 mb-3 card shadow">
                        {{ form_start(formContact) }}

                            <div class=" m-5">
                                {{ form_errors(formContact.email) }}
                                {{ form_widget(formContact.email) }}
                            </div>

                            <div class="m-5">
                                {{ form_widget(formContact.name) }}
                            </div>

                            <div class="m-5">

                                {{ form_widget(formContact.sujet) }}
                            </div>

                            <div class="m-5">

                                {{ form_widget(formContact.message) }}
                            </div>

                        {{ form_end(formContact) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}