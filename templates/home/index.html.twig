{% extends 'base.html.twig' %}

{% block title %}Fish and Tips
{% endblock %}

{% block body %}


	<section class="homeheader ">
		<img src="img/peche.jpg" class="img-fluid" alt="Materiel de pêche">
		<h1 class="main-title text-center text-white font-italic">Pêche du carnassier
			<br>
			astuce en tout genre</h1>
		<div class="col-lg-12 text-center "></div>
<div class="container mt-2 text-center">

			<label for="inputCity"><h2>Météo du jour</h2></label>
			<div class="d-flex justify-content-center mb-2">
				<div class="col-12 col-sm-6 my-3">
					<form>
						<div class="form-group">
							<input type="text" class="form-control" id="inputCity" placeholder="Ville" required>
						</div>
						<button type="submit" class="btn btn-info btn-block">
							Rechercher
						</button>
					</form>
				</div>

				<div class="box-container col-12 col-sm-6 my-3">
					<div id="city" class="box"></div>
					<div id="temp" class="box"></div>
					<div id="humidity" class="box"></div>
					<div id="wind" class="box"></div>
				</div>
			</div>

		</div>
	</section>
	<div class="container">
		<div class="row">
			{% for post in posts %}
				<div class="col-md-6">
					<img src="{{asset("uploads/images/post/" ~ post.image)}}" class="card-img-top" alt="leurre de pêche">
					<div class="card-body">
						<h5 class="card-title">{{post.title}}</h5>
						<p class="card-text">{{post.intro}}</p>
						<p>{{post.createdAt | date("d/m/Y")}}</p>
						<a href="{{ path('show_post', { slug: post.slug }) }}" class="btn btn-primary">Lire l'article</a>
					</div>
				</div>

			{% endfor %}
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{parent()}}
	<script src="js/app.js"></script>
{% endblock %}







